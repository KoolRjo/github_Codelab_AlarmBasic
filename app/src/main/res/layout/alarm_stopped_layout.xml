<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_alarm_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_alarm_stopped"
        android:contentDescription="@string/avarta_description"
        />
    <TextView
        android:id="@+id/tx_title_alarm"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="125dp"
        android:text="@string/alarm_stopped"
        android:textSize="20sp"
        android:textColor="@color/dark_red"
        android:paddingTop="10dp"
        />
    <TextView
        android:id="@+id/tx_time_alarm"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_below="@id/tx_title_alarm"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@id/tx_title_alarm"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingTop="10dp"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/tx_time_alarm"
        android:background="@color/dark_red"
        />
</RelativeLayout>